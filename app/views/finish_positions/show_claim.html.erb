<div class="my-16 px-6 lg:px-8">
  <div class="mx-auto max-w-2xl">
    <div class="px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-8">
        <h1 class="text-4xl font-bold text-gray-900 mb-4">
          Claim Your Finish Position
        </h1>
        <p class="text-xl text-gray-600">
          <%= @event.location.name %>
        </p>
        <p class="text-lg text-gray-500 mt-2">
          <%= "Event ##{@event.number} – #{l @event.date}" %>
        </p>
      </div>

      <div class="bg-white shadow sm:rounded-lg">
        <div class="px-4 py-5 sm:p-6">
          <div class="text-center">
            <div class="mb-6">
              <div class="inline-flex items-center justify-center w-24 h-24 rounded-full bg-primary text-white text-4xl font-bold">
                <%= @position %>
              </div>
            </div>

            <h3 class="text-2xl font-semibold text-gray-900 mb-2">
              Position #<%= @position %>
            </h3>

            <% if @claimed_position %>
              <div class="mb-8">
                <p class="text-gray-600 mb-4">This position has already been claimed by:</p>
                <div class="inline-flex items-center gap-2 px-4 py-2 bg-gray-100 rounded-lg">
                  <span class="text-2xl"><%= @claimed_position.user.emoji %></span>
                  <span class="text-lg font-semibold text-gray-900"><%= @claimed_position.user.display_name %></span>
                </div>
                <p class="text-gray-600 mb-4">Please see an organiser if there's been an error.</p>
              </div>
            <% else %>
              <p class="text-gray-600 mb-8">
                Click the button below to claim this finish position.
              </p>

              <%= form_with url: claim_finish_token_path(params[:token_prefix], params[:position]), method: :post, class: "space-y-4" do %>
                <%= button_tag type: "submit", class: "inline-flex items-center px-6 py-3 border border-transparent text-base font-medium rounded-md shadow-sm text-white bg-primary hover:bg-primary-hover focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary" do %>
                  Claim Position #<%= @position %>
                <% end %>
              <% end %>

              <% unless authenticated? %>
                <p class="mt-4 text-sm text-gray-500">
                  You'll be asked to sign in before claiming your position.
                  <%= link_to "Don't have an account? Sign up here", sign_up_path, class: "text-primary hover:text-primary-hover" %>
                </p>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>

      <div class="mt-6 text-center">
        <%= link_to "← Back to Event", event_path(@event.number), class: "text-primary hover:text-primary-hover" %>
      </div>
    </div>
  </div>
</div>
