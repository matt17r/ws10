<div class="my-16 px-6 lg:px-8">
  <div class="mx-auto w-full sm:w-2/3 lg:w-1/2 xl:w-1/3">
    <h1 class="font-bold text-4xl text-gray-950">Sign in</h1>
    <p class="my-2 text-gray-600">Previous runners already have an account. Use the <%= link_to "forgot password link", forgot_password_path, class: "underline hover:no-underline" %> to set your password for the first time.</p>
    <p class="my-2 text-gray-600">Want to sign up for future events? <%= link_to "Register for an account here", sign_up_path, class: "underline hover:no-underline" %>.</p>

    <%= form_with url: sign_in_url, data: { turbo: false }, class: "contents" do |form| %>
      <div class="my-5">
        <%= form.label :email_address, class: "block text-sm/6 font-medium text-gray-900" %>
        <%= form.email_field :email_address, required: true, autofocus: (controller.action_name == "new"), autocomplete: "email", placeholder: "Enter your email address", value: params[:email_address], class: "block shadow-sm rounded-md border border-gray-400 focus:outline-[#DB2955] px-3 py-2 mt-2 w-full" %>
      </div>

      <div class="my-5">
        <%= form.label :password, class: "block text-sm/6 font-medium text-gray-900" %>
        <%= form.password_field :password, required: true, autofocus: (controller.action_name == "create"), autocomplete: "current-password", placeholder: "Enter your password", maxlength: 72, class: "block shadow-sm rounded-md border border-gray-400 focus:outline-[#DB2955] px-3 py-2 mt-2 w-full" %>
      </div>

      <div class="col-span-6 sm:flex sm:items-center sm:gap-4">
        <div class="inline">
          <%= form.submit "Sign in", class: "rounded-md px-3.5 py-2.5 bg-[#DB2955] hover:bg-[#DB2955]/[90%] text-white inline-block font-medium cursor-pointer" %>
        </div>

        <div class="mt-4 text-sm text-gray-500 sm:mt-0">
          <%= link_to "Forgot password?", forgot_password_path, class: "text-gray-700 underline hover:no-underline" %>
        </div>

        <div class="mt-4 text-sm text-gray-500 sm:mt-0">
          <%= link_to "Sign up", sign_up_path, class: "text-gray-700 underline hover:no-underline" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
