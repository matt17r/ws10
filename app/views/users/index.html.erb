<div class="my-16 px-6 lg:px-8">
  <div class="mx-auto max-w-2xl lg:max-w-7xl">
    <div class="px-4 sm:px-6 lg:px-8">
      <nav class="mb-4" aria-label="Breadcrumb">
        <ol class="inline-flex items-center space-x-1 md:space-x-2 rtl:space-x-reverse">
          <li class="inline-flex items-center">
            <%= link_to root_path, class: "inline-flex items-center font-medium text-gray-700 hover:text-[#DB2955]" do %>
              <svg class="w-4 h-4" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 20">
                <path d="m19.707 9.293-2-2-7-7a1 1 0 0 0-1.414 0l-7 7-2 2a1 1 0 0 0 1.414 1.414L2 10.414V18a2 2 0 0 0 2 2h3a1 1 0 0 0 1-1v-4a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1v4a1 1 0 0 0 1 1h3a2 2 0 0 0 2-2v-7.586l.293.293a1 1 0 0 0 1.414-1.414Z"/>
              </svg>
            <% end %>
          </li>
          <li aria-current="page">
            <div class="flex items-center">
              <svg class="rtl:rotate-180 w-3 h-3 text-gray-400 mx-1" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 6 10">
                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 9 4-4-4-4"/>
              </svg>
              <span class="ms-1 text-lg font-medium text-gray-500 md:ms-2">Participants</span>
            </div>
          </li>
        </ol>
      </nav>
      <div class="text-center mb-8">
        <h1 class="text-4xl font-bold text-gray-900">All Participants</h1>
      </div>
      <div class="mt-4 flow-root">
        <% if @users.present? %>
          <div class="-mx-4 -my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
            <div class="inline-block min-w-full py-2 align-middle sm:px-6 lg:px-8">
              <table class="table-fixed min-w-full divide-y divide-gray-300">
                <thead>
                  <tr>
                    <th scope="col" class="py-3.5 pl-4 pr-3 w-40"><%= sort_link("display_name", "Participant", @sort_column, @sort_direction) %></th>
                    <th scope="col" class="py-3.5 px-3 w-24"><%= sort_link("events", "Events", @sort_column, @sort_direction) %></th>
                    <th scope="col" class="py-3.5 px-3 w-24"><%= sort_link("runs", "Runs", @sort_column, @sort_direction) %></th>
                    <th scope="col" class="py-3.5 px-3 w-32"><%= sort_link("volunteers", "Volunteers", @sort_column, @sort_direction) %></th>
                    <th scope="col" class="py-3.5 pl-3 pr-4 w-32"><%= sort_link("personal_best", "Personal Best", @sort_column, @sort_direction) %></th>
                  </tr>
                </thead>
                <tbody class="divide-y divide-gray-200 bg-white">
                  <% @users.each do |user| %>
                    <tr class="hover:bg-[#9DA39A]/50">
                      <td class="whitespace-nowrap pl-4 pr-3 py-5 text-xl text-gray-700">
                        <%= link_to user_results_path(user.barcode_string) do %>
                          <%= user.emoji %> <%= user.display_name %>
                        <% end %>
                      </td>
                      <td class="whitespace-nowrap px-3 py-5 text-xl text-gray-700">
                        <%= link_to user.total_events_count, user_results_path(user.barcode_string) %>
                      </td>
                      <td class="whitespace-nowrap px-3 py-5 text-xl text-gray-700">
                        <%= link_to user.runs_count, user_results_path(user.barcode_string) %>
                      </td>
                      <td class="whitespace-nowrap px-3 py-5 text-xl text-gray-700">
                        <%= link_to user.volunteers_count, user_results_path(user.barcode_string) %>
                      </td>
                      <td class="whitespace-nowrap pl-3 pr-4 py-5 text-xl text-gray-700">
                        <% if user.best_time %>
                          <% format_string = (user.best_time < 3600 ? "%M:%S" : "%k:%M:%S") %>
                          <%= link_to Time.at(user.best_time).utc.strftime(format_string).strip, user_results_path(user.barcode_string) %>
                        <% else %>
                          <%= link_to "N/A", user_results_path(user.barcode_string) %>
                        <% end %>
                      </td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          </div>
        <% else %>
          <p class="text-2xl font-medium p-2 md:p-0 md:py-2">No participants yet, please check back later.</p>
        <% end %>
      </div>
    </div>
  </div>
</div>
