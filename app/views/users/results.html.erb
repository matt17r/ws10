<div class="my-16 px-6 lg:px-8">
  <div class="mx-auto max-w-2xl lg:max-w-7xl">
    <div class="px-4 sm:px-6 lg:px-8">
      <nav class="mb-4" aria-label="Breadcrumb">
        <ol class="inline-flex items-center space-x-1 md:space-x-2 rtl:space-x-reverse">
          <li class="inline-flex items-center">
            <%= link_to root_path, class: "inline-flex items-center font-medium text-gray-700 hover:text-primary" do %>
              <svg class="w-4 h-4" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 20">
                <path d="m19.707 9.293-2-2-7-7a1 1 0 0 0-1.414 0l-7 7-2 2a1 1 0 0 0 1.414 1.414L2 10.414V18a2 2 0 0 0 2 2h3a1 1 0 0 0 1-1v-4a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1v4a1 1 0 0 0 1 1h3a2 2 0 0 0 2-2v-7.586l.293.293a1 1 0 0 0 1.414-1.414Z"/>
              </svg>
            <% end %>
          </li>
          <li class="inline-flex items-center">
            <svg class="rtl:rotate-180 w-3 h-3 text-gray-400 mx-1" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 6 10">
              <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 9 4-4-4-4"/>
            </svg>
            <%= link_to users_path, class: "inline-flex items-center ms-1 text-lg font-medium text-gray-700 hover:text-primary" do %>
              Participants
            <% end %>
          </li>
          <li aria-current="page">
            <div class="flex items-center">
              <svg class="rtl:rotate-180 w-3 h-3 text-gray-400 mx-1" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 6 10">
                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 9 4-4-4-4"/>
              </svg>
              <span class="ms-1 text-lg font-medium text-gray-500 md:ms-2"><%= @user.display_name %></span>
            </div>
          </li>
        </ol>
      </nav>
      <div class="text-center mb-8">
        <h1 class="text-4xl font-bold text-gray-900">
          <%= @user.emoji %> <%= @user.display_name %>
        </h1>
        <% badges_by_family = @user.user_badges.joins(:badge).includes(:badge).group_by { |ub| ub.badge.badge_family } %>
        <% if badges_by_family.any? %>
          <div class="flex justify-center items-center gap-4 mt-4">
            <% badges_by_family.sort_by { |family, _| family }.each do |family, user_badges| %>
              <div class="flex items-center">
                <% user_badges.sort_by { |ub| ub.event.date }.each_with_index do |user_badge, index| %>
                  <%= link_to badge_path(user_badge.badge), class: "relative inline-flex items-center justify-center w-12 h-12 text-badge-#{user_badge.badge.level} bg-badge rounded-full border-4 #{badge_border_class(user_badge.badge)} transition-transform hover:scale-110 #{index > 0 ? '-ml-7' : ''}", style: "z-index: #{index};", title: user_badge.display_name do %>
                    <%= render inline: Rails.root.join("app/assets/images/badges/#{user_badge.badge.badge_family}.svg").read %>
                  <% end %>
                <% end %>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>

      <% if @results.any? %>
        <h2 class="text-2xl font-semibold text-gray-900">Results</h2>
        <div class="mt-4 flow-root">
          <div class="-mx-4 -my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
            <div class="inline-block min-w-full py-2 align-middle sm:px-6 lg:px-8">
              <table class="table-fixed min-w-full divide-y divide-gray-300">
                <thead>
                  <tr>
                    <th scope="col" class="py-3.5 pl-4 pr-3 text-left font-semibold text-gray-900 w-32">Event</th>
                    <th scope="col" class="px-3 py-3.5 text-left font-semibold text-gray-900 w-32">Date</th>
                    <th scope="col" class="px-3 py-3.5 text-left font-semibold text-gray-900 w-32">Position</th>
                    <th scope="col" class="px-3 py-3.5 text-left font-semibold text-gray-900 w-32">Time</th>
                  </tr>
                </thead>
                <tbody class="divide-y divide-gray-200 bg-white">
                  <% @results.each do |result| %>
                    <tr class="hover:bg-brand-green/50">
                      <td class="whitespace-nowrap pl-4 pr-3 py-5 text-xl text-gray-700">
                        <%= link_to "##{result.event.number} – #{result.event.location}", event_path(result.event) %>
                        <% event_badges = @user.user_badges.select { |ub| ub.event_id == result.event_id } %>
                        <% if event_badges.any? %>
                          <% event_badges.group_by { |ub| ub.badge.badge_family }.sort_by { |family, _| family }.each do |family, user_badges| %>
                            <% user_badges.sort_by { |ub| ub.event.date }.each_with_index do |user_badge, index| %>
                              <%= link_to badge_path(user_badge.badge), class: "relative inline-flex items-center justify-center w-8 h-8 text-badge-#{user_badge.badge.level} bg-badge rounded-full border-2 #{badge_border_class(user_badge.badge)} transition-transform hover:scale-110 #{index > 0 ? '-ml-4' : 'ml-2'}", style: "z-index: #{index};", title: user_badge.display_name do %>
                                <%= render inline: Rails.root.join("app/assets/images/badges/#{user_badge.badge.badge_family}.svg").read %>
                              <% end %>
                            <% end %>
                          <% end %>
                        <% end %>
                      </td>
                      <td class="whitespace-nowrap px-3 py-5 text-xl text-gray-700"><%= link_to l(result.event.date), event_path(result.event) %></td>
                      <td class="whitespace-nowrap px-3 py-5 text-xl text-gray-700"><%= link_to result.place, event_path(result.event) %></td>
                      <td class="whitespace-nowrap px-3 py-5 text-xl text-gray-700">
                        <%= link_to result.time_string, event_path(result.event) %>
                        <div class="float-right flex gap-2">
                          <% if result.id == @first_timer_result_id %>
                            <span class="hidden sm:inline-flex items-center justify-center w-8 h-8 text-sm font-semibold text-primary bg-primary-bg rounded-full">
                              <svg class="size-6" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M15.59 14.37a6 6 0 0 1-5.84 7.38v-4.8m5.84-2.58a14.98 14.98 0 0 0 6.16-12.12A14.98 14.98 0 0 0 9.631 8.41m5.96 5.96a14.926 14.926 0 0 1-5.841 2.58m-.119-8.54a6 6 0 0 0-7.381 5.84h4.8m2.581-5.84a14.927 14.927 0 0 0-2.58 5.84m2.699 2.7c-.103.021-.207.041-.311.06a15.09 15.09 0 0 1-2.448-2.448 14.9 14.9 0 0 1 .06-.312m-2.24 2.39a4.493 4.493 0 0 0-1.757 4.306 4.493 4.493 0 0 0 4.306-1.758M16.5 9a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0Z" />
                              </svg>
                              <span class="sr-only">First Timer</span>
                            </span>
                          <% end %>
                          <% if @pb_result_ids.include?(result.id) %>
                            <span class="hidden sm:inline-flex items-center justify-center w-8 h-8 text-sm font-semibold text-primary bg-primary-bg rounded-full">
                              <svg class="size-6" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M14.857 17.082a23.848 23.848 0 0 0 5.454-1.31A8.967 8.967 0 0 1 18 9.75V9A6 6 0 0 0 6 9v.75a8.967 8.967 0 0 1-2.312 6.022c1.733.64 3.56 1.085 5.455 1.31m5.714 0a24.255 24.255 0 0 1-5.714 0m5.714 0a3 3 0 1 1-5.714 0M3.124 7.5A8.969 8.969 0 0 1 5.292 3m13.416 0a8.969 8.969 0 0 1 2.168 4.5" />
                              </svg>
                              <span class="sr-only">Personal Best</span>
                            </span>
                          <% end %>
                        </div>
                      </td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      <% else %>
        <p class="text-2xl font-medium p-2 md:p-0 md:py-2 mt-4">No results found for this user.</p>
      <% end %>

      <% if @volunteers.any? %>
        <h2 class="text-2xl font-semibold text-gray-900 mt-8">Volunteering</h2>
        <div class="mt-4 flow-root">
          <div class="-mx-4 -my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
            <div class="inline-block min-w-full py-2 align-middle sm:px-6 lg:px-8">
              <table class="table-fixed min-w-full divide-y divide-gray-300">
                <thead>
                  <tr>
                    <th scope="col" class="py-3.5 pl-4 pr-3 text-left font-semibold text-gray-900 w-32">Event</th>
                    <th scope="col" class="px-3 py-3.5 text-left font-semibold text-gray-900 w-32">Date</th>
                    <th scope="col" class="px-3 py-3.5 text-left font-semibold text-gray-900 w-32">Role</th>
                  </tr>
                </thead>
                <tbody class="divide-y divide-gray-200 bg-white">
                  <% @volunteers.each do |volunteer| %>
                    <tr class="hover:bg-brand-green/50">
                      <td class="whitespace-nowrap pl-4 pr-3 py-5 text-xl text-gray-700">
                        <%= link_to "##{volunteer.event.number} – #{volunteer.event.location}", event_path(volunteer.event) %>
                        <% event_badges = @user.user_badges.select { |ub| ub.event_id == volunteer.event_id } %>
                        <% if event_badges.any? %>
                          <% event_badges.group_by { |ub| ub.badge.badge_family }.sort_by { |family, _| family }.each do |family, user_badges| %>
                            <% user_badges.sort_by { |ub| ub.event.date }.each_with_index do |user_badge, index| %>
                              <%= link_to badge_path(user_badge.badge), class: "relative inline-flex items-center justify-center w-8 h-8 text-badge-#{user_badge.badge.level} bg-badge rounded-full border-2 #{badge_border_class(user_badge.badge)} transition-transform hover:scale-110 #{index > 0 ? '-ml-4' : 'ml-2'}", style: "z-index: #{index};", title: user_badge.display_name do %>
                                <%= render inline: Rails.root.join("app/assets/images/badges/#{user_badge.badge.badge_family}.svg").read %>
                              <% end %>
                            <% end %>
                          <% end %>
                        <% end %>
                      </td>
                      <td class="whitespace-nowrap px-3 py-5 text-xl text-gray-700"><%= link_to l(volunteer.event.date), event_path(volunteer.event) %></td>
                      <td class="whitespace-nowrap px-3 py-5 text-xl text-gray-700">
                        <%= link_to volunteer.role, event_path(volunteer.event) %>
                        <div class="float-right">
                          <span class="hidden sm:inline-flex items-center justify-center w-8 h-8 text-sm font-semibold text-primary bg-primary-bg rounded-full">
                            <svg class="size-6" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                              <path stroke-linecap="round" stroke-linejoin="round" d="M11.48 3.499a.562.562 0 0 1 1.04 0l2.125 5.111a.563.563 0 0 0 .475.345l5.518.442c.499.04.701.663.321.988l-4.204 3.602a.563.563 0 0 0-.182.557l1.285 5.385a.562.562 0 0 1-.84.61l-4.725-2.885a.562.562 0 0 0-.586 0L6.982 20.54a.562.562 0 0 1-.84-.61l1.285-5.386a.562.562 0 0 0-.182-.557l-4.204-3.602a.562.562 0 0 1 .321-.988l5.518-.442a.563.563 0 0 0 .475-.345L11.48 3.5Z" />
                            </svg>
                            <span class="sr-only">Volunteer</span>
                          </span>
                        </div>
                      </td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          </div>

        </div>
      <% end %>

      <% if @results.any? || @volunteers.any? %>
        <div class="w-full mt-8">
          <div class="w-full text-center font-semibold text-gray-900">Legend</div>
          <div class="flex items-center justify-center font-medium text-lg text-gray-700">
            <span class="flex items-center me-10">
              <span class="inline-flex items-center justify-center w-8 h-8 me-2 text-sm font-semibold text-primary bg-primary-bg rounded-full">
                <svg class="size-6" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M15.59 14.37a6 6 0 0 1-5.84 7.38v-4.8m5.84-2.58a14.98 14.98 0 0 0 6.16-12.12A14.98 14.98 0 0 0 9.631 8.41m5.96 5.96a14.926 14.926 0 0 1-5.841 2.58m-.119-8.54a6 6 0 0 0-7.381 5.84h4.8m2.581-5.84a14.927 14.927 0 0 0-2.58 5.84m2.699 2.7c-.103.021-.207.041-.311.06a15.09 15.09 0 0 1-2.448-2.448 14.9 14.9 0 0 1 .06-.312m-2.24 2.39a4.493 4.493 0 0 0-1.757 4.306 4.493 4.493 0 0 0 4.306-1.758M16.5 9a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0Z" />
                </svg>
              </span>
              First timer:<br class="lg:hidden"> Welcome!
            </span>
            <span class="flex items-center me-10">
              <span class="inline-flex items-center justify-center w-8 h-8 me-2 text-sm font-semibold text-primary bg-primary-bg rounded-full">
                <svg class="size-6" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M14.857 17.082a23.848 23.848 0 0 0 5.454-1.31A8.967 8.967 0 0 1 18 9.75V9A6 6 0 0 0 6 9v.75a8.967 8.967 0 0 1-2.312 6.022c1.733.64 3.56 1.085 5.455 1.31m5.714 0a24.255 24.255 0 0 1-5.714 0m5.714 0a3 3 0 1 1-5.714 0M3.124 7.5A8.969 8.969 0 0 1 5.292 3m13.416 0a8.969 8.969 0 0 1 2.168 4.5" />
                </svg>
              </span>
              Personal best:<br class="lg:hidden"> Nice work!
            </span>
            <span class="flex items-center me-10">
              <span class="inline-flex items-center justify-center w-8 h-8 me-2 text-sm font-semibold text-primary bg-primary-bg rounded-full">
                <svg class="size-6" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M11.48 3.499a.562.562 0 0 1 1.04 0l2.125 5.111a.563.563 0 0 0 .475.345l5.518.442c.499.04.701.663.321.988l-4.204 3.602a.563.563 0 0 0-.182.557l1.285 5.385a.562.562 0 0 1-.84.61l-4.725-2.885a.562.562 0 0 0-.586 0L6.982 20.54a.562.562 0 0 1-.84-.61l1.285-5.386a.562.562 0 0 0-.182-.557l-4.204-3.602a.562.562 0 0 1 .321-.988l5.518-.442a.563.563 0 0 0 .475-.345L11.48 3.5Z" />
                </svg>
              </span>
              Volunteer:<br class="lg:hidden"> Thank you!
            </span>
          </div>
        </div>
      <% else %>
        <p class="text-2xl font-medium p-2 md:p-0 md:py-2 mt-4">No results or volunteer sessions found for this user.</p>
      <% end %>
    </div>
  </div>
</div>
