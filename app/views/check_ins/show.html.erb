<div class="my-16 px-6 lg:px-8">
  <div class="mx-auto max-w-2xl">
    <div class="px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-8">
        <h1 class="text-4xl font-bold text-gray-900 mb-4">
          Event Check-In
        </h1>
        <p class="text-xl text-gray-600">
          <%= @event.location.name %>
        </p>
        <p class="text-lg text-gray-500 mt-2">
          <%= "Event ##{@event.number} – #{l @event.date}" %>
        </p>
      </div>

      <div class="bg-white shadow sm:rounded-lg">
        <div class="px-4 py-5 sm:p-6">
          <div class="text-center">
            <% if @already_checked_in %>
              <div class="mb-8">
                <div class="inline-flex items-center justify-center w-24 h-24 rounded-full bg-green-100 mb-4">
                  <svg class="w-16 h-16 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                  </svg>
                </div>
                <h3 class="text-2xl font-semibold text-gray-900 mb-2">
                  Already Checked In
                </h3>
                <p class="text-gray-600">
                  You've already checked in to this event. See you at the start line!
                </p>
              </div>

              <div class="border-t border-gray-200 pt-6">
                <% if flash[:check_in_message].present? %>
                  <p class="mt-4 text-green-700 font-medium"><%= flash[:check_in_message] %></p>
                <% end %>
                <%= form_with url: check_in_friend_path(params[:token]), method: :post, class: "space-y-4" do |form| %>
                  <div class="max-w-48 mx-auto">
                    <%= form.label :barcode, "Check someone else in using their barcode:", class: "block text-lg font-medium text-gray-900" %>
                    <%= form.text_field :barcode,
                        placeholder: "A001234",
                        class: "mt-2 block w-full rounded-md border-gray-300 shadow-sm focus:border-primary focus:ring-primary text-2xl py-3 text-center uppercase tracking-wider",
                        pattern: "[Aa]?\\d{1,6}",
                        required: true,
                        autocomplete: "off", autofocus: true %>
                  </div>
                  <%= form.submit "Check them in", class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-primary hover:bg-primary-hover focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary" %>
                <% end %>
              </div>
            <% else %>
              <div class="mb-6">
                <div class="inline-flex items-center justify-center w-24 h-24 rounded-full bg-primary text-white text-4xl">
                  ✓
                </div>
              </div>

              <h3 class="text-2xl font-semibold text-gray-900 mb-4">
                Check In Now<br><span class="text-lg">(only if you're at the event)</span>
              </h3>

              <%= form_with url: check_in_path(params[:token]), method: :post, class: "space-y-4" do %>
                <%= button_tag type: "submit", class: "inline-flex items-center px-6 py-3 border border-transparent text-base font-medium rounded-md shadow-sm text-white bg-primary hover:bg-primary-hover focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary" do %>
                  Check In Now
                <% end %>
              <% end %>

              <% unless authenticated? %>
                <p class="mt-4 text-sm text-gray-500">
                  You'll be asked to sign in before checking in.
                  <%= link_to "Don't have an account? Sign up here", sign_up_path, class: "text-primary hover:text-primary-hover" %>
                </p>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>

      <div class="mt-6 text-center">
        <%= link_to "← Back to Event", event_path(@event.number), class: "text-primary hover:text-primary-hover" %>
      </div>
    </div>
  </div>
</div>
