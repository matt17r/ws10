<div class="my-16 px-6 lg:px-8">
  <div class="mx-auto w-full sm:w-2/3 lg:w-1/2 xl:w-1/3">
    <h1 class="font-bold text-4xl text-gray-950">Update your password</h1>

    <%= form_with url: edit_password_path(params[:token]), method: :put, class: "contents" do |form| %>
      <div class="my-5">
        <%= form.label :password, class: "block text-sm/6 font-medium text-gray-900" %>
        <%= form.password_field :password, required: true, autocomplete: "new-password", placeholder: "Enter new password", maxlength: 72, class: "block shadow-sm rounded-md border border-gray-400 focus:outline-[#DB2955] px-3 py-2 mt-2 w-full" %>
      </div>

      <div class="my-5">
        <%= form.label :password_confirmation, class: "block text-sm/6 font-medium text-gray-900" %>
        <%= form.password_field :password_confirmation, required: true, autocomplete: "new-password", placeholder: "Repeat new password", maxlength: 72, class: "block shadow-sm rounded-md border border-gray-400 focus:outline-[#DB2955] px-3 py-2 mt-2 w-full" %>
      </div>

      <div class="col-span-6 sm:flex sm:items-center sm:gap-4">
        <div class="inline">
          <%= form.submit "Save", class: "rounded-md px-3.5 py-2.5 bg-[#DB2955] hover:bg-[#DB2955]/[90%] text-white inline-block font-medium cursor-pointer" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
