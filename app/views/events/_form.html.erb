<%= form_with(model: [:admin, event], class: "contents") do |form| %>
  <% if event.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul class="list-disc ml-6">
        <% event.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :number %>
    <%= form.number_field :number, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": event.errors[:number].none?, "border-red-400 focus:outline-red-600": event.errors[:number].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :date %>
    <%= form.text_field :date, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": event.errors[:date].none?, "border-red-400 focus:outline-red-600": event.errors[:date].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :location_id, "Location" %>
    <%= form.collection_select :location_id, Location.all.order(:name), :id, :name, { prompt: "Select a location" }, class: ["appearance-none block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": event.errors[:location_id].none?, "border-red-400 focus:outline-red-600": event.errors[:location_id].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :description %>
    <%= form.text_field :description, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": event.errors[:description].none?, "border-red-400 focus:outline-red-600": event.errors[:description].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :facebook_url, "Facebook Event URL (optional)" %>
    <%= form.url_field :facebook_url, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": event.errors[:facebook_url].none?, "border-red-400 focus:outline-red-600": event.errors[:facebook_url].any?}], placeholder: "https://www.facebook.com/events/..." %>
  </div>

  <div class="my-5">
    <%= form.label :strava_url, "Strava Event URL (optional)" %>
    <%= form.url_field :strava_url, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": event.errors[:strava_url].none?, "border-red-400 focus:outline-red-600": event.errors[:strava_url].any?}], placeholder: "https://www.strava.com/clubs/..." %>
  </div>

  <div class="my-5 flex items-center gap-2">
    <%= form.label :results_ready %>
    <%= form.checkbox :results_ready, class: ["block shadow-sm rounded-md border order-first h-5 w-5", {"border-gray-400 focus:outline-blue-600": event.errors[:results_ready].none?, "border-red-400 focus:outline-red-600": event.errors[:results_ready].any?}] %>
  </div>

  <div class="inline">
    <%= form.submit class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
