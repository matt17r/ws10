<div class="my-16 px-1 sm:px-6 lg:px-8">
  <div class="mx-auto max-w-2xl lg:max-w-7xl">
    <div class="px-1 sm:px-4 lg:px-8">
      <nav class="mb-4" aria-label="Breadcrumb">
        <ol class="inline-flex items-center space-x-1 md:space-x-2 rtl:space-x-reverse">
          <li class="inline-flex items-center">
            <%= link_to root_path, class: "inline-flex items-center font-medium text-gray-700 hover:text-primary" do %>
              <svg class="w-4 h-4" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 20">
                <path d="m19.707 9.293-2-2-7-7a1 1 0 0 0-1.414 0l-7 7-2 2a1 1 0 0 0 1.414 1.414L2 10.414V18a2 2 0 0 0 2 2h3a1 1 0 0 0 1-1v-4a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1v4a1 1 0 0 0 1 1h3a2 2 0 0 0 2-2v-7.586l.293.293a1 1 0 0 0 1.414-1.414Z"/>
              </svg>
            <% end %>
          </li>
          <li class="inline-flex items-center">
            <svg class="rtl:rotate-180 w-3 h-3 text-gray-400 mx-1" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 6 10">
              <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 9 4-4-4-4"/>
            </svg>
            <%= link_to events_path, class: "inline-flex items-center ms-1 text-lg font-medium text-gray-700 hover:text-primary" do %>
              Events
            <% end %>
          </li>
          <li aria-current="page">
            <div class="flex items-center">
              <svg class="rtl:rotate-180 w-3 h-3 text-gray-400 mx-1" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 6 10">
                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 9 4-4-4-4"/>
              </svg>
              <span class="ms-1 text-lg font-medium text-gray-500 md:ms-2">Event #<%= @event.number %></span>
            </div>
          </li>
        </ol>
      </nav>
      <% if @event.abandoned? || @event.cancelled? %>
        <div class="mb-6 p-4 bg-red-50 border border-red-200 rounded-lg text-center">
          <p class="text-xl font-semibold text-red-700">This event was cancelled</p>
          <% if @event.cancellation_reason.present? %>
            <p class="mt-2 text-gray-700"><%= @event.cancellation_reason %></p>
          <% end %>
        </div>
      <% end %>
      <div class="text-center mb-8">
        <h1 class="text-4xl font-bold text-gray-900">
          <%= "Event ##{@event.number} – #{l @event.date} – #{@event.location}" %>
        </h1>
      </div>
      <% if @event.finalised? && @event.description.present? %>
        <p class="mt-2 text-gray-700"><%= sanitize @event.description %></p>
      <% end %>

      <% if @event.finalised? %>
        <div class="text-center my-4">
          <span class="text-base text-gray-600 mr-3">Enjoyed the event?</span>
          <%= link_to "Support WS10", support_path, class: "font-medium text-primary underline underline-offset-3 hover:text-primary-hover hover:no-underline" %>
        </div>
      <% end %>

      <div class="mt-4 flow-root">
        <% if @event.finalised? %>
          <div class="-mx-4 -my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
            <div class="inline-block min-w-full py-2 align-middle px-0 sm:px-6 lg:px-8">
              <table class="table-fixed min-w-full divide-y divide-gray-300">
                <thead class="hidden sm:table-header-group">
                  <tr>
                    <th scope="col" class="py-3.5 pl-4 pr-3 text-left font-semibold text-gray-900 w-32">Position</th>
                    <th scope="col" class="px-3 py-3.5 text-left font-semibold text-gray-900">Name</th>
                    <th scope="col" class="px-3 py-3.5 text-left font-semibold text-gray-900 w-32">Time/Role</th>
                  </tr>
                </thead>
                <tbody class="divide-y divide-gray-200 bg-white">
                  <% @results.each do |result| %>
                    <tr class="hover:bg-brand-green/50">
                      <td class="py-3 sm:py-5 pl-1 sm:pl-4 pr-1 sm:pr-3 text-lg sm:text-2xl text-gray-700 text-right sm:text-left w-10 sm:w-32">
                        <% if result.user %>
                          <%= link_to result.place, user_results_path(result.user.barcode_string) %>
                        <% else %>
                          <%= result.place %>
                        <% end %>
                      </td>
                      <td class="py-3 sm:py-5 px-1 sm:px-3 text-lg sm:text-2xl text-gray-700 break-words">
                        <% if result.user %>
                          <%= link_to user_results_path(result.user.barcode_string) do %>
                            <%= result.user.emoji %> <%= result.user.display_name %>
                          <% end %>
                          <% event_badges = result.user.user_badges.select { |ub| ub.event_id == @event.id } %>
                          <% if event_badges.any? %>
                            <% event_badges.group_by { |ub| ub.badge.badge_family }.sort_by { |family, _| family }.each do |family, user_badges| %>
                              <% user_badges.sort_by { |ub| ub.badge.level_order }.each_with_index do |user_badge, index| %>
                                <%= link_to badge_path(user_badge.badge), class: "relative inline-flex items-center justify-center w-5 h-5 sm:w-8 sm:h-8 text-badge-#{user_badge.badge.level} bg-badge rounded-full border sm:border-2 #{badge_border_class(user_badge.badge)} transition-transform hover:scale-110 #{index > 0 ? '-ml-2 sm:-ml-4' : 'ml-1 sm:ml-2'}", style: "z-index: #{index};", title: user_badge.display_name do %>
                                  <%= render inline: Rails.root.join("app/assets/images/badges/#{user_badge.badge.badge_family}.svg").read %>
                                <% end %>
                              <% end %>
                            <% end %>
                          <% end %>
                        <% end %>
                        <% if result.first_timer? %>
                          <span href="#legend" class="hidden float-right sm:inline-flex items-center justify-center w-8 h-8 me-2 text-sm font-semibold text-primary bg-primary-bg rounded-full">
                            <svg class="size-6" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                              <path stroke-linecap="round" stroke-linejoin="round" d="M15.59 14.37a6 6 0 0 1-5.84 7.38v-4.8m5.84-2.58a14.98 14.98 0 0 0 6.16-12.12A14.98 14.98 0 0 0 9.631 8.41m5.96 5.96a14.926 14.926 0 0 1-5.841 2.58m-.119-8.54a6 6 0 0 0-7.381 5.84h4.8m2.581-5.84a14.927 14.927 0 0 0-2.58 5.84m2.699 2.7c-.103.021-.207.041-.311.06a15.09 15.09 0 0 1-2.448-2.448 14.9 14.9 0 0 1 .06-.312m-2.24 2.39a4.493 4.493 0 0 0-1.757 4.306 4.493 4.493 0 0 0 4.306-1.758M16.5 9a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0Z" />
                            </svg>
                            <span class="sr-only">First Timer</span>
                          </span>
                        <% end %>
                        <% if result.pb? %>
                          <span href="#legend" class="hidden float-right sm:inline-flex items-center justify-center w-8 h-8 me-2 text-sm font-semibold text-primary bg-primary-bg rounded-full">
                            <svg class="size-6" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                              <path stroke-linecap="round" stroke-linejoin="round" d="M14.857 17.082a23.848 23.848 0 0 0 5.454-1.31A8.967 8.967 0 0 1 18 9.75V9A6 6 0 0 0 6 9v.75a8.967 8.967 0 0 1-2.312 6.022c1.733.64 3.56 1.085 5.455 1.31m5.714 0a24.255 24.255 0 0 1-5.714 0m5.714 0a3 3 0 1 1-5.714 0M3.124 7.5A8.969 8.969 0 0 1 5.292 3m13.416 0a8.969 8.969 0 0 1 2.168 4.5" />
                            </svg>
                            <span class="sr-only">Personal Best</span>
                          </span>
                        <% end %>
                      </td>
                      <td class="py-3 sm:py-5 pl-1 sm:pl-3 pr-3 sm:pr-4 text-lg sm:text-2xl text-gray-700 text-right whitespace-nowrap w-20 sm:w-32">
                        <% if result.user %>
                          <%= link_to result.time_string, user_results_path(result.user.barcode_string) %>
                        <% else %>
                          <%= result.time_string %>
                        <% end %>
                      </td>
                    </tr>
                  <% end %>
                  <% @volunteers.each do |volunteer| %>
                    <tr class="hover:bg-brand-green/50">
                      <td class="py-3 sm:py-5 pl-1 sm:pl-4 pr-1 sm:pr-3 text-lg sm:text-2xl text-gray-700 text-right sm:text-left w-10 sm:w-32">
                        <% if volunteer.user %>
                          <%= link_to "V", user_results_path(volunteer.user.barcode_string) %>
                        <% else %>
                          V
                        <% end %>
                      </td>
                      <td class="py-3 sm:py-5 px-1 sm:px-3 text-lg sm:text-2xl text-gray-700 break-words">
                        <% if volunteer.user %>
                          <%= link_to user_results_path(volunteer.user.barcode_string) do %>
                            <%= volunteer.user.emoji %> <%= volunteer.user.display_name %>
                          <% end %>
                          <% event_badges = volunteer.user.user_badges.select { |ub| ub.event_id == @event.id } %>
                          <% if event_badges.any? %>
                            <% event_badges.group_by { |ub| ub.badge.badge_family }.sort_by { |family, _| family }.each do |family, user_badges| %>
                              <% user_badges.sort_by { |ub| ub.badge.level_order }.each_with_index do |user_badge, index| %>
                                <%= link_to badge_path(user_badge.badge), class: "relative inline-flex items-center justify-center w-5 h-5 sm:w-8 sm:h-8 text-badge-#{user_badge.badge.level} bg-badge rounded-full border sm:border-2 #{badge_border_class(user_badge.badge)} transition-transform hover:scale-110 #{index > 0 ? '-ml-2 sm:-ml-4' : 'ml-1 sm:ml-2'}", style: "z-index: #{index};", title: user_badge.display_name do %>
                                  <%= render inline: Rails.root.join("app/assets/images/badges/#{user_badge.badge.badge_family}.svg").read %>
                                <% end %>
                              <% end %>
                            <% end %>
                          <% end %>
                        <% end %>
                        <span href="#legend" class="hidden float-right sm:inline-flex items-center justify-center w-8 h-8 me-2 text-sm font-semibold text-primary bg-primary-bg rounded-full">
                          <svg class="size-6" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M11.48 3.499a.562.562 0 0 1 1.04 0l2.125 5.111a.563.563 0 0 0 .475.345l5.518.442c.499.04.701.663.321.988l-4.204 3.602a.563.563 0 0 0-.182.557l1.285 5.385a.562.562 0 0 1-.84.61l-4.725-2.885a.562.562 0 0 0-.586 0L6.982 20.54a.562.562 0 0 1-.84-.61l1.285-5.386a.562.562 0 0 0-.182-.557l-4.204-3.602a.562.562 0 0 1 .321-.988l5.518-.442a.563.563 0 0 0 .475-.345L11.48 3.5Z" />
                          </svg>
                          <span class="sr-only">Volunteer</span>
                        </span>
                      </td>
                      <td class="py-3 sm:py-5 pl-1 sm:pl-3 pr-3 sm:pr-4 text-lg sm:text-2xl text-gray-700 text-right whitespace-nowrap w-20 sm:w-32">
                        <% if volunteer.user %>
                          <%= link_to volunteer.role, user_results_path(volunteer.user.barcode_string) %>
                        <% else %>
                          <%= volunteer.role %>
                        <% end %>
                      </td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          </div>
          <div id="legend" class="hidden sm:block w-full">
            <div class="w-full text-center font-semibold text-gray-900">Legend</div>
            <div class="flex items-center justify-center font-medium text-lg text-gray-700">
              <span class="flex items-center me-10">
                <span class="inline-flex items-center justify-center w-8 h-8 me-2 text-sm font-semibold text-primary bg-primary-bg rounded-full">
                  <svg class="size-6" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M15.59 14.37a6 6 0 0 1-5.84 7.38v-4.8m5.84-2.58a14.98 14.98 0 0 0 6.16-12.12A14.98 14.98 0 0 0 9.631 8.41m5.96 5.96a14.926 14.926 0 0 1-5.841 2.58m-.119-8.54a6 6 0 0 0-7.381 5.84h4.8m2.581-5.84a14.927 14.927 0 0 0-2.58 5.84m2.699 2.7c-.103.021-.207.041-.311.06a15.09 15.09 0 0 1-2.448-2.448 14.9 14.9 0 0 1 .06-.312m-2.24 2.39a4.493 4.493 0 0 0-1.757 4.306 4.493 4.493 0 0 0 4.306-1.758M16.5 9a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0Z" />
                  </svg>
                </span>
                First timer:<br class="lg:hidden"> Welcome!
              </span>
              <span class="flex items-center me-10">
                <span class="inline-flex items-center justify-center w-8 h-8 me-2 text-sm font-semibold text-primary bg-primary-bg rounded-full">
                  <svg class="size-6" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M14.857 17.082a23.848 23.848 0 0 0 5.454-1.31A8.967 8.967 0 0 1 18 9.75V9A6 6 0 0 0 6 9v.75a8.967 8.967 0 0 1-2.312 6.022c1.733.64 3.56 1.085 5.455 1.31m5.714 0a24.255 24.255 0 0 1-5.714 0m5.714 0a3 3 0 1 1-5.714 0M3.124 7.5A8.969 8.969 0 0 1 5.292 3m13.416 0a8.969 8.969 0 0 1 2.168 4.5" />
                  </svg>
                </span>
                Personal best:<br class="lg:hidden"> Nice work!
              </span>
              <span class="flex items-center me-10">
                <span class="inline-flex items-center justify-center w-8 h-8 me-2 text-sm font-semibold text-primary bg-primary-bg rounded-full">
                  <svg class="size-6" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M11.48 3.499a.562.562 0 0 1 1.04 0l2.125 5.111a.563.563 0 0 0 .475.345l5.518.442c.499.04.701.663.321.988l-4.204 3.602a.563.563 0 0 0-.182.557l1.285 5.385a.562.562 0 0 1-.84.61l-4.725-2.885a.562.562 0 0 0-.586 0L6.982 20.54a.562.562 0 0 1-.84-.61l1.285-5.386a.562.562 0 0 0-.182-.557l-4.204-3.602a.562.562 0 0 1 .321-.988l5.518-.442a.563.563 0 0 0 .475-.345L11.48 3.5Z" />
                  </svg>
                </span>
                Volunteer:<br class="lg:hidden"> Thank you!
              </span>
            </div>
          </div>
        <% else %>
          <p class="text-2xl font-medium p-2 md:p-0 md:py-2">Results are still being processed, please check back soon!</p>
        <% end %>
      </div>
      <% if Current.user&.admin? %>
        <% if @event.active? %>
          <div class="mt-8">
            <h2 class="text-2xl font-semibold text-gray-900 mb-4">Checked-in Runners (<%= @event.check_ins.count %>)</h2>
            <% if @event.check_ins.any? %>
              <div class="overflow-x-auto shadow ring-1 ring-black ring-opacity-5 rounded-lg">
                <table class="min-w-full divide-y divide-gray-300">
                  <thead class="bg-gray-50">
                    <tr>
                      <th scope="col" class="py-3.5 pl-4 pr-3 text-left text-sm font-semibold text-gray-900">Runner Check In</th>
                      <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Actions</th>
                    </tr>
                  </thead>
                  <tbody class="divide-y divide-gray-200 bg-white">
                    <% @event.check_ins.includes(:user).order(checked_in_at: :desc).each do |check_in| %>
                      <tr>
                        <td class="whitespace-nowrap py-4 pl-4 pr-3 text-sm font-medium text-gray-900">
                          <%= check_in.user.name %>
                          <br>
                          <span class="text-xs"><%= check_in.checked_in_at.to_fs(:long) %></span>
                        </td>
                        <td class="whitespace-nowrap px-3 py-4 text-sm">
                          <%= button_to "Remove", admin_check_in_path(check_in), method: :delete, form: { data: { turbo_confirm: "Remove check-in for #{check_in.user.name}?" } }, class: "text-red-600 hover:text-red-900 font-medium" %>
                        </td>
                      </tr>
                    <% end %>
                  </tbody>
                </table>
              </div>
            <% else %>
              <p class="text-gray-500">No runners have checked in yet.</p>
            <% end %>
          </div>
        <% end %>

        <div class="mt-4 text-center">
          <%= link_to "Edit Results", edit_results_admin_event_path(@event.number), class: "text-sm text-gray-500 hover:text-gray-700 underline me-4" %>
          <%= link_to "Edit Event", edit_admin_event_path(@event.number), class: "text-sm text-gray-500 hover:text-gray-700 underline" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
