<div class="my-16 px-6 lg:px-8">
  <div class="mx-auto max-w-2xl lg:max-w-7xl">
    <div class="md:w-2/3 w-full">
      <h1 class="font-bold text-4xl">Editing event</h1>

      <%= render "form", event: @event %>

      <%= link_to "Show this event", @event, class: "w-full sm:w-auto text-center mt-2 sm:mt-0 sm:ml-2 rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>
      <%= link_to "Back to events", events_path, class: "w-full sm:w-auto text-center mt-2 sm:mt-0 sm:ml-2 rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>
      <%= button_to "Delete this event", event_path(@event), method: :delete, form: { class: "inline-block" }, class: "w-full sm:w-auto text-center mt-2 sm:mt-0 sm:ml-2 rounded-md px-3.5 py-2.5 text-white bg-red-600 hover:bg-red-500 inline-block font-medium", data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this event?" } %>
    </div>
  </div>
</div>
