<div class="mx-auto w-full max-w-2xl p-8">
  <div class="flex justify-between items-center mb-8">
    <h1 class="text-3xl font-bold text-primary">Edit User</h1>
    <div class="flex gap-2">
      <%= link_to "Back to User", admin_user_path(@user), class: "inline-flex items-center gap-x-1.5 rounded-md bg-gray-600 px-3 py-2 text-sm font-semibold text-white shadow-xs hover:bg-gray-500" %>
    </div>
  </div>

  <div class="bg-white shadow rounded-lg p-6">
    <%= form_with model: [:admin, @user], local: true do |form| %>
      <% if @user.errors.any? %>
        <div class="mb-6 rounded-md bg-red-50 p-4">
          <div class="flex">
            <div class="flex-shrink-0">
              <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
              </svg>
            </div>
            <div class="ml-3">
              <h3 class="text-sm font-medium text-red-800">
                There were <%= pluralize(@user.errors.count, "error") %> with your submission:
              </h3>
              <div class="mt-2 text-sm text-red-700">
                <ul role="list" class="list-disc space-y-1 pl-5">
                  <% @user.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            </div>
          </div>
        </div>
      <% end %>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div>
          <%= form.label :name, class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= form.text_field :name, class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-primary focus:ring-primary" %>
        </div>

        <div>
          <%= form.label :display_name, class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= form.text_field :display_name, class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-primary focus:ring-primary" %>
        </div>

        <div>
          <%= form.label :email_address, class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= form.email_field :email_address, class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-primary focus:ring-primary" %>
        </div>


        <div class="md:col-span-2">
          <%= form.label :emoji, class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= form.text_field :emoji, class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-primary focus:ring-primary", placeholder: "Single emoji character" %>
          <p class="mt-1 text-sm text-gray-500">Must be a single emoji character</p>
        </div>
      </div>

      <div class="mt-8 flex justify-end gap-3">
        <%= link_to "Cancel", admin_user_path(@user), class: "inline-flex items-center gap-x-1.5 rounded-md bg-gray-600 px-3 py-2 text-sm font-semibold text-white shadow-xs hover:bg-gray-500" %>
        <%= form.submit "Update User", class: "inline-flex items-center gap-x-1.5 rounded-md bg-primary px-3 py-2 text-sm font-semibold text-white shadow-xs hover:bg-primary-hover" %>
      </div>
    <% end %>
  </div>
</div>
