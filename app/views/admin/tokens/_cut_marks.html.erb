<div class="cut-marks">
  <%
    left_margin = 16
    top_margin = 7.5
    card_width = 85
    card_height = 54
    h_gap = 8
    v_gap = 3

    col1_left = left_margin
    col2_right = left_margin + card_width + h_gap + card_width
    page_centre_x = col1_left + card_width + h_gap / 2.0
    page_centre_y = 148.5

    x_positions = [col1_left, page_centre_x, col2_right]

    first_row_top = top_margin
    last_row_bottom = top_margin + 5 * card_height + 4 * v_gap
    gap_y_positions = 4.times.map { |i| top_margin + (i + 1) * card_height + (i + 0.5) * v_gap }
    y_positions = [first_row_top] + gap_y_positions + [last_row_bottom]
  %>

  <%# Vertical marks %>
  <% x_positions.each do |x| %>
    <div class="cut-mark v" style="left: <%= x %>mm; top: 0mm;"></div>
    <div class="cut-mark v" style="left: <%= x %>mm; bottom: 0mm;"></div>
  <% end %>

  <%# Short vertical marks at centre intersecting with gaps %>
  <% gap_y_positions.each do |y| %>
    <div class="cut-mark v short" style="left: <%= page_centre_x %>mm; top: <%= y - 1 %>mm;"></div>
  <% end %>

  <%# Horizontal marks at row positions %>
  <% y_positions.each do |y| %>
    <div class="cut-mark h" style="top: <%= y %>mm; left: 0mm;"></div>
    <div class="cut-mark h" style="top: <%= y %>mm; right: 0mm;"></div>
    <div class="cut-mark h short" style="top: <%= y %>mm; left: <%= page_centre_x - 1 %>mm;"></div>
  <% end %>

  <%# Vertical marks along left, center, and right columns at row positions %>
  <% y_positions.each do |y| %>
    <% x_positions.each do |x| %>
      <div class="cut-mark v short" style="top: <%= y - 1 %>mm; left: <%= x %>mm;"></div>
    <% end %>
  <% end %>
</div>
